
@{
    ViewBag.Title = "CONTACTO";
}

<script src="../Scripts/jquery-3.5.1.js" type="text/javascript"></script>
<script src="../Scripts/jquery-3.5.1.min.js" type="text/javascript"></script>
<script src="../Content/js/global.js" type="text/javascript"></script>

<br />
<div class="row">
    <div class="offset-1 col-md-5">
        <div class="form-group">
            <div class="col-md-12">
                <label>Tu email: </label>
                <input class="form form-control" type="text" id="email" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <label>Asunto: </label>
                <input class="form form-control" type="text" id="asunto" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <label>Mensaje: </label>
                <textarea id="mensaje" class="form form-control" rows="4" cols="50" maxlength="490"></textarea><br />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <label class="checkbox-inline"><input type="checkbox" id="check" name="check" required class="btn btn-primary" />  No soy un robot </label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" id="send" value="Enviar" class="btn btn-primary" style="width:25vw;" onclick="ContactoMail();" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <label class="form form-control" style="text-align:justify;border-style:none;font-weight:bold;">TLF: 0800-TuIdentidad</label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <label class="form form-control" style="text-align:justify;border-style:none;color:blue;">tuidentidad.com.co@gmail.com</label>
            </div>
        </div>

    </div>

    <div class="col-md-4">
        <img id="mapa" src="~/Content/image/mapa.jpg" style="width:32vw;height:45vh;" />
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            OcultarMenu();
            document.documentElement.style.overflowX = 'hidden';
        });
    </script>
}

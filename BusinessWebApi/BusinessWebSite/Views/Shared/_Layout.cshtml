<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Digital Commerce</title>
    <link href="~/Content/css/global.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Digital Commerce - Soluciones Educativas", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li style="list-style:none;position:relative;"><a href="/Home/Index" id="autentificacion" class="listBanner"> Autentificacion </a></li>
                    <li style="list-style:none;position:relative;"><a href="/Home/Contact" id="registroUsuario" class="listBanner">Registrarse</a></li>
                    <li style="list-style:none;position:relative;"><a href="/Home/About" id="registroDispositivo" class="listBanner">Registrar Dispositivo </a></li>
                    <li style="list-style:none;position:relative;"><a href="/Procesor/Contact" id="alumno" class="listBanner">Alumno</a></li>
                    <li style="list-style:none;position:relative;"><a href="/Procesor/ReportAssistance" id="actualizacionAsistencia" class="listBanner">Actualizar Asistencia</a></li>
                    <li style="list-style:none;position:relative;"><a href="/Procesor/QueryAssistance" id="consolidadoAsistencia" class="listBanner">Consultas y Consolidados</a></li>
                </ul>
                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Digital Commerce</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
    </html>

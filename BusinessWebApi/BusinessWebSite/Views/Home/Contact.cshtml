@{
    ViewBag.Title = "Registro de usuario";
}

<script src="../Scripts/jquery-3.5.1.js" type="text/javascript"></script>
<script src="../Scripts/jquery-3.5.1.min.js" type="text/javascript"></script>
<script src="../Content/js/global.js" type="text/javascript"></script>

<br />
@using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { name = "frmContact", id = "frmContact" }))
{
    <div class="row">


        <div class="offset-4 col-md-4">

            <div class="text-center">
                <h4>Registro de Usuario </h4>
            </div>
            <hr />
            <div class="form-group">
                <div class="col-12">
                    <input type="text" id="user" name="user" placeholder="Ingrese Nombre de Usuario" required class="form-control text-center" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-12">
                    <input type="email" id="email" name="email" placeholder="Ingrese Email" required class="form-control text-center" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-12 text-center">
                    <input type="password" id="password" name="password" placeholder="Ingrese Password" required class="form-control text-center" />
                    <label id="msjPassword" class="lblMsj">10 caracteres minimo combinando letras y numeros</label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-12">
                    <input type="password" id="password2" name="password2" placeholder="Confime Password" required class="form-control text-center" /><br />
                    <label id="validacion" name="validacion" class="validacionField"></label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-12 text-center">
                    <label class="checkbox-inline"><input type="checkbox" id="check" required class="btn btn-primary" /> No soy un robot</label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-12">
                    <div class="row">
                        <div class="col-6">
                            <input type="submit" id="registrar" value="Registrar" class="voton btn btn-primary" />
                        </div>
                        <div class="col-6 text-right">
                            <input type="reset" id="cancelar" value="Cancelar" onClick="NavePage('/Home/Index');" class="voton btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
            <hr />
        </div>


    </div>
}
@section Scripts{
    <script>

    $(document).ready(function () {
        OcultarMenu();
        document.documentElement.style.overflowX = 'hidden';
        let respuesta = '@ViewBag.Response';
        if (respuesta != '') {
            alert(respuesta);
            if (respuesta == 'Registro satisfactorio')
                NavePage('/Home/Autentication')
        }
    });

    $("#frmContact").submit(function (e) {

        var a = $('#password').val();
        var b = $('#password2').val();


        if (a.indexOf(' ') !== -1) {
            CancelarSubmit(e, "La contraseña no debe tener espacios en blanco");
            return false;
        }
        if (a.length < 10) {
            CancelarSubmit(e, "La contraseña debe tener 10 caracteres minimo");
            return false;
        }
        if (a != b) {
            CancelarSubmit(e, "Las contraseñas deben ser identicas");
            return false;
        }

        var mayuscula = false;
        var minuscula = false;
        var numero = false;
        for (var i = 0; i < a.length; i++) {
            if (a.charCodeAt(i) >= 65 && a.charCodeAt(i) <= 90)
                mayuscula = true;
            else if (a.charCodeAt(i) >= 97 && a.charCodeAt(i) <= 122)
                minuscula = true;
            else if (a.charCodeAt(i) >= 48 && a.charCodeAt(i) <= 57)
                numero = true;
        }

        if (minuscula === false && mayuscula === false) {
            CancelarSubmit(e, "La contraseña debe contener letras");
            return false;
        }
        if (numero === false) {
            CancelarSubmit(e, "La contraseña debe contener numeros");
            return false;
        }
    });

    function CancelarSubmit(e, msj) {
        console.log(msj);
        document.getElementById('validacion').innerHTML = msj;
        document.getElementById('validacion').style.display = 'block';
        e.preventDefault();
        setTimeout(OcultarValidacion, 4000);
    }
    </script>
}

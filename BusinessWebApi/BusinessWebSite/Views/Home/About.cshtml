@{
    ViewBag.Title = "About";
}



@using (Html.BeginForm("About", "Home", FormMethod.Post, new { name = "frmAbout", id = "frmAbout" }))
{
    <br />
    <div class="row">
        <div class="offset-4 col-md-4">
            <div>
                <h4 class="text-center">Registro de Dispositivos </h4>
            </div>
            <hr />
            <div class="form-group">
                <div class="col-md-12">
                    <input type="text" id="nombre" name="nombre" placeholder="Ingrese Nombre Completo" required class="form-control text-center" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <input type="text" id="phone" name="phone" placeholder="Ingrese Numero de Telefono" required class="form-control text-center" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <input type="text" id="dni" name="dni" placeholder="Ingrese Documento de Identidad" required class="form-control text-center" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <input type="text" id="codigo" name="codigo" placeholder="Ingrese Codigo de Validacion" required class="form-control text-center" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12 text-center">
                    <label class="checkbox-inline"><input type="checkbox" id="check" required class="btn btn-primary" /> No soy un robot</label>
                </div>
            </div>
            <hr />
            <div class="form-group">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-6">
                            <input type="submit" id="registrar" value="Registrar" class="voton btn btn-primary" />
                        </div>
                        <div class="col-md-6 text-right">
                            <input type="reset" id="cancelar" value="Cancelar" onClick="NavePage('/Home/Index');" class="voton btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts{
    <script>
    $(document).ready(function () {
        OcultarMenu();
        document.documentElement.style.overflowX = 'hidden';
        let respuesta = '@ViewBag.Response';
        if (respuesta != '')
          alert(respuesta);
  });
    </script>

}
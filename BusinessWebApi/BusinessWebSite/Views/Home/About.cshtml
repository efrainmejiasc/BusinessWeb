@{
    ViewBag.Title = "About";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
<link href="~/Content/css/global.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.4.1.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery-3.4.1.js" type="text/javascript"></script>
<script src="/Content/js/global.js" type="text/javascript"></script>

<div class="container-fluid">
    @using (Html.BeginForm("About", "Home", FormMethod.Post, new { name = "frmAbout", id = "frmAbout" }))
    {
        <div class="col-md-4 container">
            <h4>Registro de Dispositivos</h4><br>
            <input type="text" id="nombre" name="nombre" placeholder="Ingrese Nombre Completo" required class="form-control" /><br />
            <input type="text" id="phone" name="phone" placeholder="Ingrese Numero de Telefono" required class="form-control" /><br />
            <input type="text" id="dni" name="dni" placeholder="Ingrese Documento de Identidad" required class="form-control" /><br>
            <input type="text" id="codigo" name="codigo" placeholder="Ingrese Codigo de Validacion" required class="form-control" /><br>


            <label class="checkbox-inline"><input type="checkbox" id="check" required class="btn btn-primary" /> No soy un robot</label><br /><br />
            <input type="submit" id="registrar" value="Registrar" class="voton btn btn-primary" />
            <input type="reset" id="cancelar" value="Cancelar" onClick="NavePage('/Home/Index');" class="voton btn btn-primary" />
        </div>
    }
</div>
<br /><br />

<script>
    $(document).ready(function () {
        OcultarMenu();
        document.documentElement.style.overflowX = 'hidden';
        let respuesta = '@ViewBag.Response';
        if (respuesta != '') 
          alert(respuesta);
  });
</script>
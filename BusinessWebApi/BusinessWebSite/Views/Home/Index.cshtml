<script>
    $(document).ready(function () {
        document.documentElement.style.overflowX = 'hidden';
        OcultarMenu();
        SerialImagen();
    });

    var nueva = null;
    var n = 0;
    function SerialImagen() {
        var i = Math.floor(Math.random() * (6 - 0));
        CambioImagen(i);
        Stop();
        nueva = setInterval(SerialImagen, 1500);
    }

    function Stop() {
        clearTimeout(nueva);
    }

    function CambioImagen(v) {
        var srcI = ['../Content/image/biometric.JPG', '../Content/image/qrcode.JPG', '../Content/image/inventario.JPG', '../Content/image/biometric.JPG', '../Content/image/qrcode.JPG', '../Content/image/inventario.JPG'];
        var srcT = ['Sofware Biometrico', 'Lector Codigo QR', 'Gestor de Bibliotecas', 'Sofware Biometrico', 'Lector Codigo QR', 'Gestor de Bibliotecas'];

        $('#logo').attr('src', srcI[v]);
        $('#textLogo').html(srcT[v]);
    }
</script>
@{
    ViewBag.Title = "Login";
}

<br />
<div class="row">
    <div class="offset-4 col-md-4">
        <div class="text-center">
            <h4>Autentificacion de Usuario</h4>
        </div>
        <hr />
        <div class="form-group">
            <div class="col-12">
                <input type="text" id="user" name="user" placeholder="Ingresa Usuario o Email" required oninvalid="setCustomValidity('Rellene esta campo')" oninput="setCustomValidity('')" class="form-control text-center" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-12">
                <input type="password" id="password" name="password" placeholder="Ingresa Password" required oninvalid="setCustomValidity('Rellene esta campo')" oninput="setCustomValidity('')" class="form-control text-center" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-12 text-center">
                <label class="checkbox-inline"><input type="checkbox" id="check" name="check" required class="btn btn-primary" />  No soy un robot </label><br /><br />
            </div>
        </div>
        <hr />
        <div class="form-group">
            <div class="col-12">
                <div class="row">
                    <div class="col-6">
                        <input type="submit" id="enviar" value="Enviar" class="voton btn btn-primary" onclick="LoginUser();" />
                    </div>
                    <div class="col-6 text-right">
                        <input type="reset" id="cancelar" value="Cancelar" onclick="Limpiar();" class="voton btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            OcultarMenu();
            document.documentElement.style.overflowX = 'hidden';
        });
        function Limpiar() {
            $('#user').val('');
            $('#password').val('');
            $("input[type=checkbox]").prop("checked", false);
        }
    </script>
}

